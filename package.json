{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "NETWORK=localhost npm-run-all --parallel watch serve",
    "serve": "FLASK_ENV=dev python app.py",
    "prod": "python app.py",
    "search": "elasticsearch",
    "flask-test": "python test_app.py",
    "test-server": "npm-run-all --parallel search flask-test",
    "test": "node_modules/.bin/cypress run"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "cypress": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "bulma": "^0.8.0",
    "lodash": "^4.17.15",
    "rollup-plugin-css-only": "^2.0.0",
    "sirv-cli": "^0.4.4"
  }
}
